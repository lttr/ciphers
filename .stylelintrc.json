{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-idiomatic-order",
    "stylelint-config-prettier"
  ],
  "ignoreFiles": ["node_modules/**", "dist/**"],
  "rules": {
    "order/properties-alphabetical-order": null,
    "rule-empty-line-before": [
      "always",
      {
        "except": ["first-nested"],
        "severity": "warning"
      }
    ],
    "no-empty-source": null
  }
}
